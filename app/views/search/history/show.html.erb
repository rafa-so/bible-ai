<div class="container p-5">
    <div class="row">
        <div class="col">
            Termo: <%= @response.term %>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <td>Referência</td>
                        <td>Conteúdo</td>
                    </tr>
                </thead>
                <% @response.content.each do |item| %>
                    <tr>
                        <td>
                            <%= reference(item) %>
                        </td>
                        <td>
                            <%= content(item) %>
                        </td>
                    </tr>
                <% end %>
            <table>
        </div>
    </div>
</div>
