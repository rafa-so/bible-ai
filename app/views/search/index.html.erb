<div class="container p-5">
    <div class="row">
        <div class="col">
            <% if @response.dig(:verses).empty? %>
                <p> Não foi possível achar resultado para esta pesquisa! </p>
            <% end  %>

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <td>Referência</td>
                        <td>Conteúdo</td>
                    </tr>
                </thead>
                <% @response.dig(:verses).each do |item| %>
                    <tr>
                        <td>
                            <%= reference(item) %>
                        </td>
                        <td>
                            <%= content(item) %>
                        </td>
                    </tr>
                <% end %>
            <table>
        </div>
    </div>
</div>
